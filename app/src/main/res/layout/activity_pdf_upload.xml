<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PdfUploadActivity">

    <Button
        android:id="@+id/btnPdfYukle"
        android:layout_width="119dp"
        android:layout_height="54dp"
        android:text="PDF Yükle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnPdfSec"
        app:layout_constraintTop_toBottomOf="@+id/pdfUploadAciklama" />

    <Button
        android:id="@+id/btnPdfSec"
        android:layout_width="117dp"
        android:layout_height="55dp"
        android:text="PDF SEC"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnPdfYukle"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pdfUploadAciklama" />

    <TextView
        android:id="@+id/pdfUploadAciklama"
        android:layout_width="287dp"
        android:layout_height="80dp"
        android:text="Lütfen az önce oluşturduğun PDF'i imzalayıp yükle. Aksi halde yüklenen pdfler geçersiz kabul edilecektir!"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/btnPdfYukle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pdfUploadTitle" />

    <TextView
        android:id="@+id/pdfUploadTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        app:layout_constraintBottom_toTopOf="@+id/pdfUploadAciklama"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UyeActivity">


  <LinearLayout
      android:orientation="vertical"
      android:weightSum="10"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:gravity="center">


    <TextView
        android:id="@+id/title"
        android:layout_width="344dp"
        android:layout_height="81dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="64dp"
        android:text="Yaz Okulu Başvursu "
        android:textAlignment="center"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/UyeOgrNo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/yazokul" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="348dp"
        android:layout_height="48dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"

        android:autofillHints="Bölüm"
        tools:ignore="SpeakableTextPresentCheck" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/dersadi"
        android:layout_width="345dp"
        android:layout_height="wrap_content"
        app:boxStrokeColor="@color/purple_500"
        app:startIconDrawable="@drawable/lesson"
        app:startIconContentDescription="text"
        app:startIconTint="#EB424242"

        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"

        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:hint="1.Ders Adı"
        android:textSize="20sp"
        >

      <com.google.android.material.textfield.TextInputEditText
          android:layout_width="match_parent"
          android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>



    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/derskodu"
        android:layout_width="345dp"
        android:layout_height="wrap_content"
        app:boxStrokeColor="@color/purple_500"
        app:startIconDrawable="@drawable/code"
        app:startIconContentDescription="text"
        app:startIconTint="#EB424242"

        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"

        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:hint="Ders Kodu"
        android:textSize="20sp"
        >

      <com.google.android.material.textfield.TextInputEditText
          android:layout_width="match_parent"
          android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/derskredi"
        android:layout_width="345dp"
        android:layout_height="wrap_content"
        app:boxStrokeColor="@color/purple_500"
        app:startIconDrawable="@drawable/note"
        app:startIconContentDescription="text"
        app:startIconTint="#EB424242"

        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"

        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:hint="Ders Kredisi"
        android:inputType="number"
        android:textSize="20sp"
        >

      <com.google.android.material.textfield.TextInputEditText
          android:layout_width="match_parent"
          android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>





    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/dersadi2"
        android:layout_width="345dp"
        android:layout_height="wrap_content"
        app:boxStrokeColor="@color/purple_500"
        app:startIconDrawable="@drawable/lesson"
        app:startIconContentDescription="text"
        app:startIconTint="#EB424242"

        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"

        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="2.Ders Adı"
        android:inputType="textMultiLine"
        android:textSize="20sp"
        >

      <com.google.android.material.textfield.TextInputEditText
          android:layout_width="match_parent"
          android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/derskodu2"
        android:layout_width="345dp"
        android:layout_height="wrap_content"
        app:boxStrokeColor="@color/purple_500"
        app:startIconDrawable="@drawable/code"
        app:startIconContentDescription="text"
        app:startIconTint="#EB424242"

        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"

        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:hint="Ders Kodu"
        android:textSize="20sp"
        >

      <com.google.android.material.textfield.TextInputEditText
          android:layout_width="match_parent"
          android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>



    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/derskredi2"
        android:layout_width="345dp"
        android:layout_height="wrap_content"
        app:boxStrokeColor="@color/purple_500"
        app:startIconDrawable="@drawable/note"
        app:startIconContentDescription="text"
        app:startIconTint="#EB424242"

        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"

        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:hint="Ders Kredisi"
        android:inputType="number"
        android:textSize="20sp"
        >

      <com.google.android.material.textfield.TextInputEditText
          android:layout_width="match_parent"
          android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btnPdf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="8dp"
        android:text="Form Pdf'i Oluştur"
        style="?attr/materialButtonOutlinedStyle"
        android:textColor="#686868"
        app:strokeWidth="1dp"
        app:strokeColor="#8A8A8A"
        app:elevation="6dp"/>

    <Button
        android:id="@+id/btnPdfUpload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="8dp"
        android:text="Yükle"
        app:backgroundTint="#50C9D4"
        app:strokeWidth="1dp"
        app:strokeColor="#8A8A8A"
        app:elevation="6dp"
        android:textColor="@color/white"/>

    <LinearLayout
        android:layout_width="356dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        />

  </LinearLayout>

</ScrollView>